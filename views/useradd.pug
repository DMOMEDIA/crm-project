extends layout

block stylecss
  link(href='./assets/css/demo1/pages/wizard/wizard-4.css', rel='stylesheet', type='text/css')

block content
  if user
    html
      head
      body
        #kt_subheader.kt-subheader.kt-grid__item
          .kt-container.kt-container--fluid
            .kt-subheader__main
              h3.kt-subheader__title
                | Dodawanie nowego pracownika
              .kt-subheader__breadcrumbs
                a.kt-subheader__breadcrumbs-home(href='#')
                  i.flaticon2-shelter
                span.kt-subheader__breadcrumbs-separator
                a.kt-subheader__breadcrumbs-link(href='#') Pracownicy
                span.kt-subheader__breadcrumbs-separator
                a.kt-subheader__breadcrumbs-link.kt-subheader__breadcrumbs-link--active(href='/dashboard/useradd') Dodaj pracownika
        // begin:: Content
        .kt-container.kt-container--fluid.kt-grid__item.kt-grid__item--fluid
          #kt_user_add_user.kt-wizard-v4(data-ktwizard-state='step-first')
            // begin: Form Wizard Nav
            .kt-wizard-v4__nav
              .kt-wizard-v4__nav-items.nav
                // doc: Replace A tag with SPAN tag to disable the step link click
                a.kt-wizard-v4__nav-item.nav-item(style='cursor:pointer;', data-ktwizard-type='step', data-ktwizard-state='current')
                  .kt-wizard-v4__nav-body
                    .kt-wizard-v4__nav-number
                      | 1         
                    .kt-wizard-v4__nav-label
                      .kt-wizard-v4__nav-label-title
                        | Profil           
                      .kt-wizard-v4__nav-label-desc
                        | Dane personalne
                a.kt-wizard-v4__nav-item.nav-item(style='cursor:pointer;', data-ktwizard-type='step')
                  .kt-wizard-v4__nav-body
                    .kt-wizard-v4__nav-number
                      | 2   
                    .kt-wizard-v4__nav-label
                      .kt-wizard-v4__nav-label-title
                        | Konto
                      .kt-wizard-v4__nav-label-desc
                        | Dane identyfikacyjne i ustawienia
                a.kt-wizard-v4__nav-item.nav-item(style='cursor:pointer;', data-ktwizard-type='step')
                  .kt-wizard-v4__nav-body
                    .kt-wizard-v4__nav-number
                      | 3
                    .kt-wizard-v4__nav-label
                      .kt-wizard-v4__nav-label-title
                        | Podsumowanie
                      .kt-wizard-v4__nav-label-desc
                        | Sprawdź poprawność danych i zapisz
            // end: Form Wizard Nav
            .kt-portlet
              .kt-portlet__body.kt-portlet__body--fit
                .kt-grid
                  .kt-grid__item.kt-grid__item--fluid.kt-wizard-v4__wrapper
                    // begin: Form Wizard Form
                    form#kt_user_add_form.kt-form
                      // begin: Form Wizard Step 1
                      .kt-wizard-v4__content(data-ktwizard-type='step-content', data-ktwizard-state='current')
                        .kt-heading.kt-heading--md Dane personalne
                        .kt-section.kt-section--first
                          .kt-wizard-v4__form
                            .row
                              .col-xl-12
                                .kt-section__body
                                  .form-group.row.kt-hidden
                                    label.col-xl-3.col-lg-3.col-form-label Avatar               
                                    .col-lg-9.col-xl-6
                                      #kt_user_add_avatar.kt-avatar.kt-avatar--outline
                                        .kt-avatar__holder(style='background-image: url(./assets/media/users/300_10.jpg)')                         
                                        label.kt-avatar__upload(data-toggle='kt-tooltip', title='Zmień zdjęcie')
                                          i.fa.fa-pen                                     
                                          input(type='file', name='kt_user_add_user_avatar')                         
                                        span.kt-avatar__cancel(data-toggle='kt-tooltip', title='Usuń zdjęcie')
                                          i.fa.fa-times              
                                  .form-group.row
                                    label.col-xl-3.col-lg-3.col-form-label Imię:                     
                                    .col-lg-9.col-xl-9
                                      input#firstname.form-control(type='text', name='firstname', placeholder='Imię')                    
                                  .form-group.row
                                    label.col-xl-3.col-lg-3.col-form-label Nazwisko:                  
                                    .col-lg-9.col-xl-9
                                      input#lastname.form-control(type='text', name='lastname', placeholder='Nazwisko')                  
                                  .form-group.row
                                    label.col-xl-3.col-lg-3.col-form-label Adres e-mail:       
                                    .col-lg-9.col-xl-9
                                      .input-group
                                        .input-group-prepend
                                          span.input-group-text
                                            i.la.la-at                
                                        input#email.form-control(type='email', name='email', placeholder='Adres e-mail', aria-describedby='basic-addon1')
                                  .form-group.form-group-last.row
                                    label.col-xl-3.col-lg-3.col-form-label Numer telefonu:                           
                                    .col-lg-9.col-xl-9
                                      .input-group
                                        .input-group-prepend
                                          span.input-group-text
                                            i.la.la-phone   
                                        input#telephone.form-control(type='text', name='pNumber', placeholder='Numer telefonu', aria-describedby='basic-addon1')
                      // end: Form Wizard Step 1
                      // begin: Form Wizard Step 2
                      .kt-wizard-v4__content(data-ktwizard-type='step-content')
                        .kt-section.kt-section--first
                          .kt-wizard-v4__form
                            .row
                              .col-xl-12
                                .kt-section__body
                                  .form-group.row
                                    .col-lg-9.col-xl-6
                                      h3.kt-section__title.kt-section__title-md Dane identyfikacyjne
                                  .form-group.row
                                    label.col-xl-3.col-lg-3.col-form-label Identyfikator:
                                    .col-lg-9.col-xl-9
                                      input#gen-identity.form-control(type='text', name='gen_identity')    
                                  .form-group.row
                                    label.col-xl-3.col-lg-3.col-form-label(for='roleL') Rola:
                                    .col-lg-9.col-xl-9
                                      select#roleL.form-control(name='urole')
                                        option(value='0' selected='' disabled='') Wybierz rolę
                                        if userPermissions.includes('crm.employees.add.administrator')
                                          option(value='administrator') Administrator
                                        if userPermissions.includes('crm.employees.add.kierownik')
                                          option(value='kierownik') Kierownik
                                        if userPermissions.includes('crm.employees.add.posrednik')
                                          option(value='posrednik') Pośrednik
                                        if userPermissions.includes('crm.employees.add.pracownik')
                                          option(value='pracownik') Pracownik                     
                                  .form-group.row
                                    label.col-xl-3.col-lg-3.col-form-label Hasło:
                                    .col-lg-9.col-xl-9
                                      .input-group
                                        .input-group-prepend
                                          span#refresh-password.input-group-text
                                            i.la.la-refresh(style='font-size:26px;')
                                        .input-group-prepend
                                          span#show-password.input-group-text
                                            i.la.la-eye-slash(style='font-size:26px;')
                                        input#password.form-control(type='password', name='password')
                                  .form-group.row
                                    label.col-xl-3.col-lg-3.col-form-label Powtórz hasło:
                                    .col-lg-9.col-xl-9
                                      input#confirm-password.form-control(type='password', name='confirm_password')
                      // end: Form Wizard Step 2
                      // begin: Form Wizard Step 3
                      .kt-wizard-v4__content(data-ktwizard-type='step-content')
                        .kt-heading.kt-heading--md Podsumowanie
                        .kt-form__section.kt-form__section--first
                          .kt-wizard-v4__review.kt-font-lg
                            .kt-wizard-v4__review-item
                              .kt-wizard-v4__review-title
                                | Dane personalne
                              .kt-wizard-v4__review-content
                                p#fullnameP.kt-margin-0
                                p.kt-margin-0 Adres e-mail: 
                                  span#emailP
                                p.kt-margin-0 Numer telefonu: 
                                  span#telephoneP
                            .kt-wizard-v4__review-item
                              .kt-wizard-v4__review-title
                                | Dane identyfikacyjne
                              .kt-wizard-v4__review-content
                                p.kt-margin-0 Identyfikator: 
                                  span#identityP.kt-badge.kt-badge--dark.kt-badge--inline.kt-font-lg
                                p.kt-margin-0 Rola: 
                                  span#roleP
                                p.kt-margin-0 Hasło: 
                                  span#passwordP.kt-badge.kt-badge--dark.kt-badge--inline.kt-font-lg xxxxxxxxxx
                                button#copy-password.btn.btn-label-brand.btn-bold.btn-sm.kt-margin-t-10(type='button') Kopiuj hasło
                      // end: Form Wizard Step 3
                      // begin: Form Actions
                      .kt-form__actions
                        .btn.btn-secondary.btn-md.btn-tall.btn-wide.kt-font-bold.kt-font-transform-u(data-ktwizard-type='action-prev')
                          | Powrót
                        .btn.btn-success.btn-md.btn-tall.btn-wide.kt-font-bold.kt-font-transform-u(data-ktwizard-type='action-submit')
                          | Zapisz   
                        .btn.btn-brand.btn-md.btn-tall.btn-wide.kt-font-bold.kt-font-transform-u(data-ktwizard-type='action-next')
                          | Dalej
block scripts
  script(src='./assets/vendors/general/jquery-form/dist/jquery.form.min.js', type='text/javascript')
  script(src='./assets/vendors/general/jquery-validation/dist/jquery.validate.js', type='text/javascript')
  script(src='./assets/vendors/general/jquery-validation/dist/additional-methods.js', type='text/javascript')
  script(src='./assets/vendors/custom/js/vendors/jquery-validation.init.js', type='text/javascript')
  script(src='./assets/js/demo1/pages/pGenerator.js', type='text/javascript')
  script(src='./assets/js/private/useradd-validator.js', type='text/javascript')
