extends layout

block content
  if user
    #kt_subheader.kt-subheader.kt-grid__item
      .kt-container.kt-container--fluid
        .kt-subheader__main
          h3.kt-subheader__title
            | Dodaj firmę
          .kt-subheader__breadcrumbs
            a.kt-subheader__breadcrumbs-home(href='#')
              i.flaticon2-shelter
            span.kt-subheader__breadcrumbs-separator
            a.kt-subheader__breadcrumbs-link(href='#') Firmy
            span.kt-subheader__breadcrumbs-separator
            a.kt-subheader__breadcrumbs-link.kt-subheader__breadcrumbs-link--active(href='/dashboard/companyadd') Dodaj firmę
    // begin:: Content
    .kt-container.kt-container--fluid.kt-grid__item.kt-grid__item--fluid
      .kt-portlet
        form#kt_form_company.kt-form.kt-form--label-right
          .kt-portlet__body
            .kt-section.kt-section--first
              h3.kt-section__title Dane firmy:
              .kt-section__body
                .form-group.row
                  label.col-lg-3.col-form-label Nazwa firmy:
                  .col-lg-6
                    input.form-control(type='text', name='companyName', placeholder='Nazwa firmy')
                    span.form-text.text-muted Wprowadź pełną nazwę firmy
                .form-group.row
                  label.col-lg-3.col-form-label NIP:
                  .col-lg-6
                    .input-group
                      .input-group-prepend
                        span.input-group-text
                          i.la.la-check-square        
                      input#nipInput.form-control(type='text', name='nip', maxlength='10', placeholder='Wprowadź numer NIP')
                .form-group.row
                  label.col-lg-3.col-form-label Adres e-mail:
                  .col-lg-6
                    .input-group
                      .input-group-prepend
                        span.input-group-text
                          i.la.la-at     
                      input.form-control(type='email', name='email', placeholder='Adres e-mail')
                .form-group.row
                  label.col-lg-3.col-form-label Numer telefonu:
                  .col-lg-6
                    .input-group
                      .input-group-prepend
                        span.input-group-text
                          i.la.la-phone 
                      input.form-control(type='text', name='phone', placeholder='Numer telefonu')
              | 
              .kt-separator.kt-separator--border-dashed.kt-separator--space-lg
              | 
              h3.kt-section__title Adres firmy: 
              .kt-section__body
                .form-group.row
                  label.col-lg-3.col-form-label Adres:
                  .col-lg-6
                    input.form-control(type='text', name='address' placeholder='Adres firmy')
                .form-group.row
                  label.col-lg-3.col-form-label Kod pocztowy:
                  .col-lg-6
                    input.form-control(type='text', name='postcode', placeholder='Kod pocztowy')
                .form-group.row
                  label.col-lg-3.col-form-label Miejscowość:
                  .col-lg-6
                    input.form-control(type='text', name='city', placeholder='Miejscowość')
                .form-group.row
                  label.col-lg-3.col-form-label Województwo:
                  .col-lg-6
                    select.form-control(name='voivodeship')
                      option(selected='', checked='', value='') Wybierz województwo
                      option(value='dolnośląskie') dolnośląskie
                      option(value='lubelskie') lubelskie
                      option(value='lubuskie') lubuskie
                      option(value='łódzkie') łódzkie
                      option(value='małopolskie') małopolskie
                      option(value='mazowieckie') mazowieckie
                      option(value='opolskie') opolskie
                      option(value='podkarpackie') podkarpackie
                      option(value='podlaskie') podlaskie
                      option(value='śląskie') śląskie
                      option(value='świętokrzyskie') świętokrzyskie
                      option(value='warmińsko-mazurskie') warmińsko-mazurskie
                      option(value='wielkopolskie') wielkopolskie
                      option(value='zachodniopomorskie') zachodniopomorskie
              | 
              .kt-separator.kt-separator--border-dashed.kt-separator--space-lg
              | 
              h3.kt-section__title Opiekun firmy: 
              .kt-section__body
                .form-group.row
                  label.col-lg-3.col-form-label Imię opiekuna:
                  .col-lg-6
                    input.form-control(type='text', name='firstname_k', placeholder='Imię opiekuna')
                .form-group.row
                  label.col-lg-3.col-form-label Nazwisko opiekuna:
                  .col-lg-6
                    input.form-control(type='text', name='lastname_k', placeholder='Nazwisko opiekuna')
                .form-group.row
                  label.col-lg-3.col-form-label Adres e-mail:
                  .col-lg-6
                    .input-group
                      .input-group-prepend
                        span.input-group-text
                          i.la.la-at     
                      input.form-control(type='email', name='email_k', placeholder='Adres e-mail')
                .form-group.row
                  label.col-lg-3.col-form-label Numer telefonu:
                  .col-lg-6
                    .input-group
                      .input-group-prepend
                        span.input-group-text
                          i.la.la-phone 
                      input.form-control(type='text', name='phone_k', placeholder='Numer telefonu')
              | 
              .kt-separator.kt-separator--border-dashed.kt-separator--space-lg
              | 
              h3.kt-section__title Prowizje: 
              .kt-section__body
                .form-group.row
                  label.col-lg-3.col-form-label Wartość prowizji leasing:
                  .col-lg-6
                    .input-group
                      .input-group-prepend
                        span.input-group-text
                          | %  
                      input#p_leasing.form-control(type='text', name='provision_leasing', placeholder='Wartość prowizji leasing')
                .form-group.row
                  label.col-lg-3.col-form-label Wartość prowizji wynajem:
                  .col-lg-6
                    .input-group
                      .input-group-prepend
                        span.input-group-text
                          | %
                      input#p_rent.form-control(type='text', name='provision_rent', placeholder='Wartość prowizji wynajem')
          .kt-portlet__foot
            .kt-form__actions
              .row
                .col-lg-3.mx-auto 
                  button.btn.btn-success(name='save_company') Dodaj firmę
        // end::Form
